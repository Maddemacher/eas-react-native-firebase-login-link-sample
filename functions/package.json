{
  "name": "functions",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write src/**/*.ts src/*.ts src/**/*.d.ts .eslintrc.js",
    "lint": "eslint --ext .ts src",
    "postbuild": "cp -R src/templates/* lib/templates",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "tsc-watch --onSuccess \"npm run postbuild\"",
    "ci": "npm run format && npm run lint --fix",
    "test": "jest",
    "clean": "rm -rf node_modules && rm -rf lib"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "express": "4.18.2",
    "express-async-handler": "1.2.0",
    "firebase-admin": "11.4.1",
    "firebase-functions": "4.1.1",
    "handlebars": "4.7.7",
    "joi": "^17.7.0",
    "nodemailer": "6.8.0",
    "faker": "^5.5.3",
    "pretty": "2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/faker": "^5.5.7",
    "@types/jest": "^29.2.5",
    "@types/nodemailer": "^6.4.7",
    "@types/pretty": "^2.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "firebase-functions-test": "3.0.0",
    "jest": "^29.3.1",
    "nock": "^13.2.9",
    "nodemailer-mock": "^1.5.12",
    "prettier": "2.8.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^6.0.0",
    "typescript": "4.9.4"
  },
  "private": true
}