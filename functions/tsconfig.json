{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ],
  "include": [
    "src"
  ]
}
